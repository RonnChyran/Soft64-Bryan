<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:binding="clr-namespace:Soft64Binding.WPF;assembly=Soft64Binding.WPF"
        xmlns:r="clr-namespace:Soft64WPF"
        xmlns:NlogViewer="clr-namespace:NlogViewer;assembly=NlogViewer"
        xmlns:conv="clr-namespace:Soft64WPF.Converters"
        x:Class="Soft64WPF.Windows.MainWindow"
        Title="Soft64 Emulator" Height="451" Width="659"
        FontSize="10.667"
        ClipToBounds="False" Background="{x:Null}" Icon="/Soft64WPF;component/Images/s64logo.png">
    <Window.Resources>
        <conv:CartridgeHeaderConverter x:Key="cartridgeHeaderConverter" />
        <conv:RcpBusConfigurationConverter x:Key="rcpBusConfigurationConverter" />
        <LinearGradientBrush x:Key="InfoBorderBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5" />
                    <SkewTransform CenterY="0.5" CenterX="0.5" />
                    <RotateTransform Angle="-30" CenterY="0.5" CenterX="0.5" />
                    <TranslateTransform />
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FF113346" Offset="0" />
            <GradientStop Color="#FF7FA2CB" Offset="0.575" />
        </LinearGradientBrush>
        <Style x:Key="readOnlyStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="IsHitTestVisible" Value="False" />
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" CaptionHeight="26" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="650*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="260*" />
            <RowDefinition Height="51*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="xamlControl_EmuRunButton" Margin="0,4,4,0" Content="Run" HorizontalAlignment="Left" VerticalAlignment="Top" Width="46" Height="22" />
            <Button x:Name="xamlControl_EmuPauseButton" Margin="0,4,4,0" Content="Pause" HorizontalAlignment="Left" VerticalAlignment="Top" Width="55" Height="22" />
            <Button x:Name="xamlControl_EmuStopButton" Margin="0,4,4,0" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="47" Height="22" />
            <Button x:Name="xamlControl_MainCartBrowseFileButton" Content="Insert Cartridge" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="123" RenderTransformOrigin="0.5,0.5" Margin="0,4,4,0" />
            <Button x:Name="xaml_ButtonEjectCartridge" Content="Eject Cartridge" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="123" RenderTransformOrigin="0.5,0.5" Margin="0,4,4,0" Click="xaml_ButtonEjectCartridge_Click" />
        </StackPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="Log">
                <Grid Background="#FFE5E5E5">
                    <NlogViewer:NlogViewer />
                </Grid>
            </TabItem>
            <TabItem Header="Cartridge">
                <Grid Background="#FFE5E5E5" DataContext="{Binding Cartridge, Source={StaticResource machineVM}}">
                    <TextBlock x:Name="xamlControl_CartridgeName" Margin="10,10,10,0" Height="23" VerticalAlignment="Top"
						Text="{Binding Name, Mode=OneWay}" FontSize="10" FontWeight="Normal" />
                    <ListBox x:Name="xamlControl_MainCartridgeHeaderListBox" Margin="10,38,10,10"
						ItemsSource="{Binding Header, Converter={StaticResource cartridgeHeaderConverter}, Mode=OneWay}" FontSize="14" />
                </Grid>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="2">
            <Button x:Name="xaml_ButtonToolMemoryEditor" Content="Memory" Margin="10,10,0,0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="65" Click="xaml_ButtonToolMemoryEditor_Click" />
        </Grid>
    </Grid>
</Window>