<RibbonWindow x:Class="Soft64WPF.Windows.CPUDebugger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CPU Debugger" Height="501" Width="607"
        DataContext="{Binding ., Source={StaticResource machineVM}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Ribbon>
            <RibbonTab Header="Debug">
                <RibbonGroup Header="Control">
                    <StackPanel Orientation="Horizontal">
                        <RibbonButton x:Name="xaml_BtnPause" Label="Pause" Height="18" VerticalAlignment="Top" Click="xaml_BtnPause_Click" />
                        <RibbonButton x:Name="xaml_BtnResume" Label="Resume" Height="18" VerticalAlignment="Top" Click="xaml_BtnResume_Click" />
                    </StackPanel>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <StatusBar x:Name="xaml_StatusBar" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding MachineRunState, StringFormat=Machine State: {0}}" />
            </StackPanel>
        </StatusBar>
    </Grid>
</RibbonWindow>
