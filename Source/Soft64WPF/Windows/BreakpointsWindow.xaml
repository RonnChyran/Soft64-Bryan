<Window x:Class="Soft64WPF.Windows.BreakpointsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Breakpoint List" Height="306" Width="545" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="27"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="xaml_BreakpointListBox" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" Height="22" VerticalAlignment="Bottom" >
            <TextBox x:Name="xaml_TextBoxAddress" Width="132" Margin="0,0,5,0" />
            <Button x:Name="xaml_BtnAdd" Content="Add" Margin="0,0,5,0" Width="41"/>
            <Button x:Name="xaml_BtnRemove" Content="Remove" Width="57" />
        </StackPanel>
    </Grid>
</Window>
